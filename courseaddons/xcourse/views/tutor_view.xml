<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record id="xcourse_tutor_view_form_inherit" model="ir.ui.view">
        <field name="name">xcourse_tutor_view_form_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_tutor"/>
            </xpath>
        </field>
    </record>

    <record id="xcourse_tutor_view_tree_inherit" model="ir.ui.view">
        <field name="name">xcourse_tutor_view_tree_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="replace">
                <field name="function"/>
            </xpath>
        </field>
    </record>

    <record id="xcourse_tutor_view_action" model="ir.actions.act_window">
        <field name="name">Tutor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="xcourse_tutor_view_menu_action"
              name="Tutor"
              parent="xcourse_tutor_menu_categ"
              action="xcourse_tutor_view_action"
              sequence="10"/>
</odoo>