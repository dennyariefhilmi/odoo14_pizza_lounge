<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xcourse_session_bahasa_view_tree" model="ir.ui.view">
        <field name="name">xcourse_session_bahasa_view_tree</field>
        <field name="model">xcourse.sessionbahasa</field>
        <field name="arch" type="xml">
            <tree string="xcourse_session_bahasa_tree">
                <field name="nama_kursus"/>
                <field name="tgl_mulai"/>
                <field name="nama_tutor"/>
                <field name="jml_siswa"/>
            </tree>
        </field>
    </record>

    <record id="xcourse_session_bahasa_view_form" model="ir.ui.view">
        <field name="name">xcourse_session_bahasa_view_form</field>
        <field name="model">xcourse.sessionbahasa</field>
        <field name="arch" type="xml">
            <form string="xcourse_session_bahasa_form">
                <sheet>
                    <group>
                        <field name="nama_kursus"/>
                        <field name="tgl_mulai"/>
                        <field name="nama_tutor"/>
                        <field name="jml_siswa"/>
                    </group>
                    <notebook colspan ='4'>
                        <page name='peserta' string='Peserta'>
                            <field name="peserta_ids"/>
                            <tree editable="bottom">
                                <field name="peserta_ids"/>
                            </tree>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

   <record id="xcourse_session_bahasa_action" model="ir.actions.act_window">
       <field name="name"></field>
       <field name="type">ir.actions.act_window</field>
       <field name="res_model">xcourse.sessionbahasa</field>
       <field name="view_mode">tree,form</field>
   </record>

    <menuitem id="xcourse_session_bahasa_menu_action"
              name="Session Bahasa"
              parent="xcourse_session"
              action="xcourse_session_bahasa_action"
              sequence="10"/>
</odoo>


