<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="supplier_view_tree" model="ir.ui.view">
        <field name="name">supplier_view_tree</field>
        <field name="model">restaurant.supplier</field>
        <field name="arch" type="xml">
            <tree string="supplier_tree">
                <field name="name"/>
                <field name="name"/>
                <field name="keterangan"/>
                <field name="alamat"/>
                <field name="negara"/>
                <field name="provinsi"/>
                <field name="kota"/>
            </tree>
        </field>
    </record>

    <record id="supplier_view_form" model="ir.ui.view">
        <field name="name">supplier_view_form</field>
        <field name="model">restaurant.supplier</field>
        <field name="arch" type="xml">
            <form string="supplier_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="alamat"/>
                            <field name="negara"/>
                            <field name="provinsi"/>
                            <field name="kota"/>
                        </group>
                        <group>
                            <field name="keterangan"/>
                        </group>
                    </group>
                    <notebook colspan="8">
                        <page name="name" string="Daftar Harga">
                            <field name="bahan_id">
                                <tree editable='bottom' create="true">
                                    <field name="name"/>
                                    <field name="harga"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="supplier_view_action" model="ir.actions.act_window">
        <field name="name">Supplier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">restaurant.supplier</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item Must have a parent -->
    <menuitem id="supplier_menu_categ"
              name="Supplier"
              parent="restaurant_daftar_menu"
              action="supplier_view_action"
              sequence="41"/>
</odoo>